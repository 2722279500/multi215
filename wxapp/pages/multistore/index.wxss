@import "/pages/category/list.wxss";

.store-header {
	width: 100%;
	height: 320rpx;
	font-size: 32rpx;
	color: #FFFFFF;
	display: flex;
	justify-content: flex-start;
	align-items: center;
	background-position: center;
	background-size: cover;
}

.store-header .header-img {
	width: 120rpx;
	height: 120rpx;
	flex-shrink: 0;
	margin: 0 24rpx; 
	background-position: center;
	background-size: cover;
	border-radius: 50%;
	overflow: hidden;
}

.search-nav {
	width: 94%;
	margin: 0 auto;
	padding: 24rpx;
	color: #666666;
	font-size: 30rpx;
	background: #ffffff;
	border-radius: 18rpx;
	box-sizing: border-box;
	box-shadow: 0 8rpx 16rpx #EEEEEE;
	display: flex;
	position: relative;
	top: -24rpx;
	z-index: 10;
}

.search-nav .nav-item {
	margin: 0 24rpx;
}

.search-nav .nav-item.select {
	color: #F05B72;
}